{
    "extends": [
        "next",
        "next/core-web-vitals"
    ],
    "ignorePatterns": [
        "*.cjs",
        ".next/**/*"
    ],
    "env": {
        "jest": true
    },
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "quote-props": [
            "error",
            "consistent-as-needed"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-trailing-spaces": "error",
        "no-unused-vars": [
            "error",
            {
                "args": "after-used",
                "varsIgnorePattern": "^__unused"
            }
        ]
    }
}